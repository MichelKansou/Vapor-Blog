#extend("Layouts/admin")

#export("head") {
	<title>My App</title>
}

#export("body") {
    <div class="posts-container">
        <h1>Posts Page</h1>
        #if(posts) {
            #loop(posts, "post") {
                <article class="post">
                    <h2 class="title">#(post.title)</h2>
                    <p class="content">#(post.content)</p>
                </article>
            }
        }
    </div>
}
