<!DOCTYPE html>
<html>
    <head>
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet">
        <link rel="stylesheet" href="/styles/app.css">
        <link rel="stylesheet" href="/styles/font-awesome.min.css">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    </head>
    <body>
        <header class="admin">
            <a class="blog-logo" href="/">
                <img src="/images/E13_white.svg"alt="blog-logo"></a>
            <nav>
                <ul>
                    <li><a href="/" class="nav-item #if(homePage) {active}">Home</a></li>
                    <li><a href="posts" class="nav-item #if(postsPage) {active}">Posts</a></li>
                </ul>
            </nav>

            <div class="user-menu">
                <a href="/admin/my-profile" class="btn"><i class="fa fa-user" aria-hidden="true"></i></a>
                <form action="/logout" method="POST">
                    <button class="btn logout" type="submit"><i class="fa fa-sign-out" aria-hidden="true"></i></button>
                </form>
            </div>
        </header>
        <main>
            #import("body")
        </main>
    </body>
</html>
